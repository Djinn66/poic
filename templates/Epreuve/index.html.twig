{% extends 'base.html.twig' %}

{% block title %}Epreuve index{% endblock %}

{% block body %}
    <h1></h1>
    <div class="col-md-12">
        <div class="content-panel">
            <div class="row">
                <div class="col-sm-11">
            <h4><i class="fa fa-angle-right"></i> Liste des épreuves</h4></div>
                <div class="col-sm-1"><a class="btn btn-link-add" title="Ajouter" href="{{ path('epreuve_new') }}"><i class="fa fa-plus"></i></a></div></div>
            <section id="unseen">
                <table class="table table-striped table-condensed">
                <thead>
                <tr>
                    <th>Intitule</th>
                    <th>Périodicité</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for epreuve in epreuves %}
                    <tr>
                        <td>{{ epreuve.intitule }}</td>
                        <td>{{ epreuve.periodicite }} an{{ epreuve.periodicite <=1 ? "" : "s"}}</td>
                        <td>
                        <div class="row row-cols-7 ">
                                <a class="btn btn-sm btn-link-edit" title="Editer" href="{{ path('epreuve_edit', {'id': epreuve.id}) }}"><i class="fa fa-edit"></i></a>
                                {{ include('epreuve/_delete_form.html.twig') }}</div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
            </section>
        </div>
    </div>
{% endblock %}