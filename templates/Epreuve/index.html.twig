{% extends 'base.html.twig' %}

{% block title %}Epreuve index{% endblock %}

{% block body %}
    <h1>Epreuve index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>Periodicite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for epreuve in epreuves %}
            <tr>
                <td>{{ epreuve.id }}</td>
                <td>{{ epreuve.intitule }}</td>
                <td>{{ epreuve.periodicite ? epreuve.periodicite|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('epreuve_show', {'id': epreuve.id}) }}">show</a>
                    <a href="{{ path('epreuve_edit', {'id': epreuve.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('epreuve_new') }}">Create new</a>
{% endblock %}
