{% extends 'base.html.twig' %}

{% block title %}Bareme index{% endblock %}

{% block body %}
    <h1></h1>
    <div class="col-md-12">
        <div class="content-panel">
            <div class="row">
                <div class="col-sm-11">
            <h4><i class="fa fa-angle-right"></i> Liste des baremes</h4></div>
                <div class="col-sm-1"><a class="btn btn-link-add" title="Ajouter" href="{{ path('bareme_new') }}"><i class="fa fa-plus"></i></a></div></div>
            <section id="unseen">
                <table class="table table-striped table-condensed">
                <thead>
                <tr>
                    <th>Age_max</th>
                    <th>Sexe</th>
                    <th>Resultat_min</th>
                    <th>Note</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for bareme in baremes %}
                    <tr>
                        <td>{{ bareme.ageMax }} ans</td>
                        <td>{{ bareme.sexe }}</td>
                        <td>{{ bareme.resultatMin }}</td>
                        <td>{{ bareme.note }}</td>
                        <td>
                        <td>
                                <div class="row row-cols-2 ">
                                        <a class="btn btn-sm btn-link-edit" title="Editer" href="{{ path('bareme_edit', {'id': bareme.id}) }}"><i class="fa fa-edit"></i></a>
                                        {{ include('bareme/_delete_form.html.twig') }}</div>
                                </td>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
            </section>
        </div>
    </div>
{% endblock %}